.btn-variant(@color; @background; @border) {
    color : @color;
    background-color: @background;
    border-color    : @border;
    margin: 0;

    &:hover,
    &:focus,
    &.focus,
    &:active,
    &.active {
        color: @color;
        background-color: darken(@background, 10%);
        border-color    : darken(@border, 12%);
    }
}