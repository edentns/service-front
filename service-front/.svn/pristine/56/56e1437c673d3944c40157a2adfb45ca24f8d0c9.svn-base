@font-family-base: "Noto Sans KR", sans-serif;

@font-size-base: 12px;
@font-size-large: ceil((@font-size-base * 1.25)); // 15px
@font-size-small: ceil((@font-size-base * 0.80)); // 10px

@font-size-h1: floor((@font-size-base * 2.6)); 	// 31px
@font-size-h2: floor((@font-size-base * 2.15)); // 25px
@font-size-h3: ceil((@font-size-base * 1.7)); 	// 21px
@font-size-h4: ceil((@font-size-base * 1.25)); 	// 15px
@font-size-h5: @font-size-base;
@font-size-h6: ceil((@font-size-base * 0.80)); 	// 10px